<h1>Studios Index</h1>

<% @studios.each do |studio| %>
  <div id=<%= studio.id%>>
    <h3><%= studio.name %></h3>
    <p>Location: <%= studio.location %></p>
    <p>Studio Movies:</p>
    <ul>
      <% studio.movies.each do |movie| %>
      <li><%= movie.title %></li>
      <li>Year: <%= movie.creation_year %></li>
      <li>Genre: <%= movie.genre.capitalize %></li>
      <% end %>
    </ul>
  </div>  
<% end %>